<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.username %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<%  if @post.liked?(current_user) %>
    <%= link_to 'Unlike', unlike_post_path(@post), method: 'post'%>
<% else %>
    <%= link_to 'Like', like_post_path(@post), method: 'post'%>
<% end %>