<div class="container">
  <div class="row">
    <div class="row" style="margin-top:20px;"> 
      <div class="col-lg-6 col-lg-offset-3">
      <% if @tags %>
        <h1 style="font-size: 24px;">Currently viewing 
          <% @tags.each do |tag| %>
            <span class="badge" style="font-size: 20px;"><%=tag%></span>
          <% end %>
        </h1>
      <% end %>
      <%= render 'posts/search' %>
      </div>
    </div>
  <% @posts.each do |post| %>
    <div class="post-container">
      <div class="row" style="margin-top:20px;">
        <div class="col-lg-4 col-lg-offset-1" style="text-align:center;">
          <!-- image -->
          <%= link_to post do %>
            <%= image_tag(post.main_image, :style=>'max-height:300px; max-width:100%;') %>
          <% end %>
        </div>
        <div class="col-lg-6" style="position:relative; height:300px;">
          <!-- content description -->
          <h3><%= post.name %></h3>
          <%  if post.liked?(current_user) %>
            <span class="glyphicon glyphicon-heart heart small-heart"></span>
          <% else %>
            <span class="glyphicon glyphicon-heart-empty heart heart-empty small-heart"></span>
          <% end %>
          <h4><3 243</h4>
          <h4><%= post.contents.count %> total links</h4>
          <!-- If link medium isn't included, add CSS class 'desaturized' to image (makes it B&W) -->
          <%= image_tag("youtube.png", :class=>'pic-url-icon') %>
          <%= image_tag("reddit.png", :class=>'pic-url-icon') %>
          <%= image_tag("imgur.png", :class=>'pic-url-icon') %>
          <%= image_tag("8tracks.svg", :class=>'pic-url-icon') %>
          <div class="row" style="position: absolute; bottom: 0; width: 100%; height: 50px; border-top: 1px solid #4E5D6C;">
            <p class="pull-left" style="margin-top:5px;"><%= post.user.username %></p>
            <p class="pull-right" style="margin-top:5px;">updated <%= time_ago_in_words(post.updated_at) %> ago</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>